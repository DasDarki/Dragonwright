{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "ApplicationName": "Dragonwright"
    }
  },
  "FileStorage": {
    "BasePath": "Storage",
    "CleanupIntervalMinutes": 60
  },
  "AuthConfiguration": {
    "Key": "CHANGE_THIS_TO_A_SECURE_SECRET_KEY_AT_LEAST_32_CHARACTERS_LONG",
    "Issuer": "DragonwrightAuthServer",
    "Audience": "DragonwrightApiUsers",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationMinutes": 1440,
    "RefreshTokenAbsoluteExpirationDays": 365
  }
}
